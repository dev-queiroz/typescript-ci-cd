{
  "name": "typescript-ci-cd",
  "version": "1.0.0",
  "description": "Projeto de exemplo utilizando TypeScript com CI/CD, Express e testes com Jest.",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "test": "jest --watchAll=false --detectOpenHandles --forceExit",
    "test:watch": "jest --watch"
  },
