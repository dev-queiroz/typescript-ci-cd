  "license": "",
  "engines": {
    "node": ">=20.15.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "supertest": "^6.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.0",
    "@types/nodemon": "^1.19.6",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
